{
  "QueryLanguage": "JSONata",
  "Comment": "Extracci√≥n del listado de Legislaturas",
  "StartAt": "Get Legislaturas",
  "States": {
    "Get Legislaturas": {
      "Type": "Task",
      "Resource": "arn:aws:states:::http:invoke",
      "Arguments": {
        "ApiEndpoint": "https://web-back.senado.cl/api/legislatures",
        "Method": "GET",
        "InvocationConfig": {
          "ConnectionArn": "${events_connection_arn}"
        }
      },
      "Retry": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "BackoffRate": 2,
          "IntervalSeconds": 1,
          "MaxAttempts": 3,
          "JitterStrategy": "FULL"
        }
      ],
      "Next": "Save Legislaturas",
      "Output": "{% $states.result.ResponseBody.data.{\n    \"id\": ID_LEGISLATURA,\n    \"numero\": NUMERO,\n    \"inicio\": INICIO,\n    \"termino\": TERMINO,\n    \"tipo\": TIPO\n} %}"
    },
    "Save Legislaturas": {
      "Type": "Task",
      "Arguments": {
        "Body": "{% $states.input %}",
        "Bucket": "${bucket_name}",
        "Key": "raw/legislaturas/data.json"
      },
      "Resource": "arn:aws:states:::aws-sdk:s3:putObject",
      "End": true
    }
  }
}
